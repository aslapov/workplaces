<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_text"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:lineHeight="34sp"
        android:textFontWeight="400"/>

    <TextView
        android:id="@+id/post_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_location"
        android:drawableLeft="@drawable/icon_location"
        android:drawablePadding="6dp"
        android:layout_marginVertical="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorDarkGrey"
        android:textSize="13sp"
        android:lineHeight="17sp"
        android:textFontWeight="400" />

    <View
        android:id="@+id/post_location_view"
        android:layout_width="148dp"
        android:layout_height="100dp"
        android:background="@drawable/fake_location_shape"/>

    <View
        android:id="@+id/post_location_photo"
        android:layout_width="148dp"
        android:layout_height="122dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/fake_location_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorMiddleGrey"
            android:textSize="11sp"
            android:lineHeight="14.3sp"
            android:textFontWeight="400" />

        <ImageView
            android:id="@+id/post_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_like"/>

    </LinearLayout>

</LinearLayout>
